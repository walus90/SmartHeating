<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_unit_detail">

    <module.control.UnitPropertyView_
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upvType"/>

    <module.control.UnitPropertyView_
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upvName"/>

    <module.control.UnitPropertyView_
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upvId"/>

    <module.control.UnitPropertyView_
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upvCurrentTemp"/>

    <module.control.UnitPropertyView_
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upvTargetTemp"/>

    <module.control.UnitPropertyView_
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upvValve"/>

    <module.control.UnitPropertyView_
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upvAdress"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/bSave" />
</LinearLayout>